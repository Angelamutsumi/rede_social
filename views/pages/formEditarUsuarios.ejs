<%- include('../partials/header.ejs'); %>

<main>
    <div class="container">
        <div class="row">
            <div class="col">
                <h3 class="my-md-5 mx-md-5">Você já participa da nossa rede!</h3>
                <form class="p-md-4 border w-75 mx-md-auto mb-md-5" action="/usuarios/editarUsuarios" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="nome">Nome</label>
                        <input type="text" class="form-control" name="nome" id="nome" value="<%= usuario.nome %>" required>
                    </div>
                    <span id="alertNome" class="alert alert-danger" style="display: none;">Digite um nome</span>

                    <div class="form-group">
                        <label for="nome">Nome de usuário</label>
                        <input type="text" class="form-control" name="apelido" id="apelido"
                            value="<%= usuario.apelido %>" required>
                    </div>
                    <span id="alertapelido" class="alert alert-danger" style="display: none;">Digite um apelido ou seu nome, se preferir</span>

                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="text" class="form-control" name="email" id="email" value="<%= usuario.email %>" required>
                    </div>
                    <span id="alertemail" class="alert alert-danger" style="display: none;">Digite um email
                        válido</span>

                    <div class="form-group">
                        <label for="hobbies">Hobbies</label>
                        <input type="text" class="form-control" name="hobbies" id="hobbies"
                            value="<%= usuario.hobbies %>">
                    </div>

                    <div class="form-group">
                        <label for="educacao">Educação</label>
                        <input type="text" class="form-control" name="educacao" id="educacao"
                            value="<%= usuario.educacao %>">
                    </div>

                    <div class="form-group">
                        <label for="trabalho">Trabalho</label>
                        <input type="text" class="form-control" name="trabalho" id="trabalho"
                            value="<%= usuario.trabalho %>">
                    </div>

                    <div class="form-group">
                        <label for="post">Escreva seu post aqui</label>
                        <textarea class="form-control m-md-auto" id="post" rows="3" name="postagem" required></textarea>
                    </div>

                    <div class="form-group">
                        <label for="file">Inclua sua foto</label>
                        <input type="file"  name='file' class="form-control-file" id="file" value="<%=usuario.file %>" required>
                      </div>

                    <div class="text-center w-100 d-flex">
                        <div class="text-center mx-auto">
                            <input type="hidden" name="id" value="<%=usuario._id %>" />
                            <button type="submit" class="btn" id="btn">Editar</button>
                        </div>  

                        <div class="text-center mx-auto">
                            <input type="hidden" name="id" value="<%= usuario._id %>" />
                            <a href="/usuarios/deletarUsuarios/<%= usuario._id %>"
                                class="btn btn-outline-danger">Excluir</a>
                        </div>  
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>

<%- include('../partials/footer.ejs'); %>