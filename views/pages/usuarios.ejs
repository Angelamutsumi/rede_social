<%- include('../partials/header.ejs'); %>

<main>
    <div class="container-fluid">
        <div class="row">
            <div class="col-2 border m-md-3 p-md-3" id='usuariosDiv'>
                <h5 class="my-md-2">Usuários</h5>
                <!-- lista de usuarios - apelidos-->
                <div >                    
                    <% usuarios.forEach(function(usuario){ %>
                        <div id="cadastrados">
                            <a  id='linkNome' href="/usuarios/editarUsuarios/<%= usuario._id %>"><%= usuario.nome %></a>
                        </div>
                    <% }) %>                     
                </div>
            </div>
            <div class="col-6 border m-md-3 p-md-3">
                <h5 class="my-md-2">Posts</h5>
                <!-- lista de publicações apelido e posts-->
                <div id="postsDiv">
                    <% usuarios.forEach(function(usuario){ %>   
                        <div id="post">
                            <div id="nomePost"><%= usuario.apelido %><br /></div> 
                            <span><%= usuario.postagem %><br /></span> 
                        </div>                         
                    <% }) %>
                </div>
            </div>
            <div class="col-3 border m-md-3 p-md-3">
                <h5 class="my-md-2">Patrocinado</h5>
                <!-- lista de patrocinadores, só fotos e nomes-->
                <div class="anuncios mt-md-3">
                    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                          <div class="carousel-item active">
                            <img class="d-block w-100" src="img/shoes1.png" alt="First slide">
                          </div>
                          <div class="carousel-item">
                            <img class="d-block w-100" src="img/shoes4.jpg" alt="Second slide">
                          </div>
                          <div class="carousel-item">
                            <img class="d-block w-100" src="img/shoes3.png" alt="Third slide">
                          </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                          <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                          <span class="carousel-control-next-icon" aria-hidden="true"></span>
                          <span class="sr-only">Next</span>
                        </a>
                      </div>                      
                </div>
                <div class="anuncios mt-md-3">
                    <div id="carouselExampleControls1" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                          <div class="carousel-item active">
                            <img class="d-block w-100" src="img/shorts1.jpg" alt="First slide">
                          </div>
                          <div class="carousel-item">
                            <img class="d-block w-100" src="img/shorts2.jpg" alt="Second slide">
                          </div>
                          <div class="carousel-item">
                            <img class="d-block w-100" src="img/camiseta1.jpg" alt="Third slide">
                          </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleControls1" role="button" data-slide="prev">
                          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                          <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleControls1" role="button" data-slide="next">
                          <span class="carousel-control-next-icon" aria-hidden="true"></span>
                          <span class="sr-only">Next</span>
                        </a>
                      </div>
                </div>
                <div class="anuncios mt-md-3">
                    <div id="carouselExampleControls2" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                          <div class="carousel-item active">
                            <img class="d-block w-100" src="img/oculos.jpg" alt="First slide">
                          </div>
                          <div class="carousel-item">
                            <img class="d-block w-100" src="img/relogio.jpg" alt="Second slide">
                          </div>
                          <div class="carousel-item">
                            <img class="d-block w-100" src="img/relogio1.jpg" alt="Third slide">
                          </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleControls2" role="button" data-slide="prev">
                          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                          <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleControls2" role="button" data-slide="next">
                          <span class="carousel-control-next-icon" aria-hidden="true"></span>
                          <span class="sr-only">Next</span>
                        </a>
                      </div>
                </div>
               
            </div>
        </div>
           
    </div>
</main>



<%- include('../partials/footer.ejs'); %>